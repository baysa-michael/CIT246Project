                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour1900" />

            <TextView
                android:id="@+id/weeklycalendarHour2100"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour2000" />

            <TextView
                android:id="@+id/weeklycalendarHour2200"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour2100" />

            <TextView
                android:id="@+id/weeklycalendarHour2300"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour2200" />
            <!-- Contains List of Appointments -->
            <HorizontalScrollView
                android:id="@+id/weeklycalendarAppointmentLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/extra_small_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/weeklycalendarHour0000"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/weeklycalendarHourlyLayoutHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <FrameLayout
                        android:id="@+id/weeklycalendarAppointmentDay1"
                        android:layout_width="@dimen/day_width"
                        android:layout_height="0dp"
                        android:background="@drawable/thin_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/weeklycalendarAppointmentDay2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/weeklycalendarAppointmentDay2"
                        android:layout_width="@dimen/day_width"
                        android:layout_height="0dp"
                        android:background="@drawable/thin_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/weeklycalendarAppointmentDay3"
                        app:layout_constraintStart_toEndOf="@+id/weeklycalendarAppointmentDay1"
                        app:layout_constraintTop_toTopOf="parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/weeklycalendarAppointmentDay3"
                        android:layout_width="@dimen/day_width"
                        android:layout_height="0dp"
                        android:background="@drawable/thin_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/weeklycalendarAppointmentDay4"
                        app:layout_constraintStart_toEndOf="@+id/weeklycalendarAppointmentDay2"
                        app:layout_constraintTop_toTopOf="parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/weeklycalendarAppointmentDay4"
                        android:layout_width="@dimen/day_width"
                        android:layout_height="0dp"
                        android:background="@drawable/thin_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/weeklycalendarAppointmentDay5"
                        app:layout_constraintStart_toEndOf="@+id/weeklycalendarAppointmentDay3"
                        app:layout_constraintTop_toTopOf="parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/weeklycalendarAppointmentDay5"
                        android:layout_width="@dimen/day_width"
                        android:layout_height="0dp"
                        android:background="@drawable/thin_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/weeklycalendarAppointmentDay6"
                        app:layout_constraintStart_toEndOf="@+id/weeklycalendarAppointmentDay4"
                        app:layout_constraintTop_toTopOf="parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/weeklycalendarAppointmentDay6"
                        android:layout_width="@dimen/day_width"
                        android:layout_height="0dp"
                        android:background="@drawable/thin_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/weeklycalendarAppointmentDay7"
                        app:layout_constraintStart_toEndOf="@+id/weeklycalendarAppointmentDay5"
                        app:layout_constraintTop_toTopOf="parent">

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/weeklycalendarAppointmentDay7"
                        android:layout_width="@dimen/day_width"
                        android:layout_height="0dp"
                        android:background="@drawable/thin_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/weeklycalendarAppointmentDay6"
                        app:layout_constraintTop_toTopOf="parent">

                    </FrameLayout>
                </android.support.constraint.ConstraintLayout>
            </HorizontalScrollView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


    <Button
        android:id="@+id/weeklycalendarReturnButton"
        android:text="@string/return_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_margin"
        android:layout_marginStart="@dimen/general_margin"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/weeklycalendarAddButton"
        android:text="@string/add_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/general_margin"
        android:layout_marginEnd="@dimen/general_margin"
        android:textSize="@dimen/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>
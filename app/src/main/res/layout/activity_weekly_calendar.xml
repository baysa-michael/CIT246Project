                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0500" />

            <TextView
                android:id="@+id/weeklycalendarHour0700"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0600" />

            <TextView
                android:id="@+id/weeklycalendarHour0800"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0700" />

            <TextView
                android:id="@+id/weeklycalendarHour0900"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0800" />

            <TextView
                android:id="@+id/weeklycalendarHour1000"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0900" />

            <TextView
                android:id="@+id/weeklycalendarHour1100"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour1000" />

            <TextView
                android:id="@+id/weeklycalendarHour1200"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour1100" />

            <TextView
                android:id="@+id/weeklycalendarHour1300"
                android:layout_width="0dp"

                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour1200" />

            <TextView
                android:id="@+id/weeklycalendarHour1400"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour1300" />

            <TextView
                android:id="@+id/weeklycalendarHour1500"
                android:layout_width="0dp"

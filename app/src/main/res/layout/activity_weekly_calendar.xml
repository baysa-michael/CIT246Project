<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_presenter.weekly_calendar.WeeklyCalendar">

    <TextView
        android:id="@+id/weeklycalendarTitle"
        android:text="@string/weekly_view_title"
        android:textSize="@dimen/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/weeklycalendarWeekOf"
        android:text="@string/week_of_label"
        android:textSize="@dimen/label_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/general_margin"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weeklycalendarTitle"
        />

    <EditText
        android:id="@+id/weeklycalendarDateEdit"
        android:inputType="date"
        tools:ignore="Autofill"
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/general_margin"
        android:ems="10"
        android:hint="@string/date_hint"
        app:layout_constraintBaseline_toBaselineOf="@+id/weeklycalendarWeekOf"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/general_margin"
        app:layout_constraintBottom_toTopOf="@+id/weeklycalendarReturnButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weeklycalendarWeekOf"
        app:layout_constraintVertical_bias="1.0">
        <!-- Contains Hour Grid for Calendar -->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/weeklycalendarHourlyLayoutVertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/weeklycalendarDateRow"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/weeklycalendarHour0000"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toStartOf="@+id/weeklycalendarHour0000fill"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weeklycalendarDateRow" />

            <TextView
                android:id="@+id/weeklycalendarHour0000fill"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/weeklycalendarHour0000"
                app:layout_constraintTop_toBottomOf="@id/weeklycalendarDateRow" />

            <TextView
                android:id="@+id/weeklycalendarHour0100"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0000" />

            <TextView
                android:id="@+id/weeklycalendarHour0200"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0100" />

            <TextView
                android:id="@+id/weeklycalendarHour0300"
                android:layout_width="0dp"
                android:layout_height="@dimen/row_height"
                android:background="@drawable/top_and_bottom_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/weeklycalendarHour0200" />

            <TextView
                android:id="@+id/weeklycalendarHour0400"
